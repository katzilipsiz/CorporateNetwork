<Window x:Class="CorporateNetworkWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorporateNetworkWPF"
        xmlns:converters="clr-namespace:CorporationNetworkWPF.Converters"
        mc:Ignorable="d"
        Title="Корпоративная сеть - HR система" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Добавляем конвертер -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#f0f0f0" Margin="10">
            <Button Content="🔄 Обновить все" Command="{Binding LoadDataCommand}" Background="#4CAF50" Foreground="White"/>
            <Separator Width="20" Visibility="Hidden"/>

            <Button Content="🏢 Главные отделы" Command="{Binding LoadMainDepartmentsCommand}" Background="#2196F3" Foreground="White"/>
            <Button Content="🏢 Отделы" Command="{Binding LoadDepartmentsCommand}" Background="#2196F3" Foreground="White"/>
            <Button Content="👥 Сотрудники" Command="{Binding LoadEmployeesCommand}" Background="#FF9800" Foreground="White"/>
            <Button Content="💼 Должности" Command="{Binding LoadPositionsCommand}" Background="#9C27B0" Foreground="White"/>
            <Button Content="👤 Кандидаты" Command="{Binding LoadCandidatesCommand}" Background="#009688" Foreground="White"/>

            <Separator Width="20" Visibility="Hidden"/>

            <Button Content="➕ Добавить главный отдел" Command="{Binding AddMainDepartmentCommand}" Background="#4CAF50" Foreground="White"/>
            <Button Content="➕ Добавить отдел" Command="{Binding AddDepartmentCommand}" Background="#4CAF50" Foreground="White"/>
            <Button Content="➕ Добавить сотрудника" Command="{Binding AddEmployeeCommand}" Background="#4CAF50" Foreground="White"/>
        </StackPanel>

        <!-- Контент с табами -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Вкладка главных отделов -->
            <TabItem Header="🏢 Главные отделы">
                <DataGrid ItemsSource="{Binding MainDepartments}" 
                          SelectedItem="{Binding SelectedMainDepartment}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Код" Binding="{Binding MainDepartmentCode}" Width="100"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding MainDepartmentName}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка отделов -->
            <TabItem Header="🏢 Отделы">
                <DataGrid ItemsSource="{Binding Departments}" 
                          SelectedItem="{Binding SelectedDepartment}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Код" Binding="{Binding DepartmentCode}" Width="80"/>
                        <DataGridTextColumn Header="Главный отдел" Binding="{Binding MainDepartment}" Width="100"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding DepartmentName}" Width="200"/>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка сотрудников -->
            <TabItem Header="👥 Сотрудники">
                <DataGrid ItemsSource="{Binding Employees}" 
                          SelectedItem="{Binding SelectedEmployee}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Таб. номер" Binding="{Binding PersonalNumber}" Width="80"/>
                        <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="200"/>
                        <DataGridTextColumn Header="Отдел" Binding="{Binding DepartmentCode}" Width="80"/>
                        <DataGridTextColumn Header="Должность" Binding="{Binding PositionCode}" Width="80"/>
                        <DataGridTextColumn Header="Раб. телефон" Binding="{Binding WorkPhone}" Width="120"/>
                        <DataGridTextColumn Header="Моб. телефон" Binding="{Binding MobilePhone}" Width="120"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка должностей -->
            <TabItem Header="💼 Должности">
                <DataGrid ItemsSource="{Binding Positions}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Код" Binding="{Binding PositionCode}" Width="80"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding PositionName}" Width="200"/>
                        <DataGridTextColumn Header="Зарплата" Width="120">
                            <DataGridTextColumn.Binding>
                                <Binding Path="Salary" StringFormat="{}{0:C}"/>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка кандидатов -->
            <TabItem Header="👤 Кандидаты">
                <DataGrid ItemsSource="{Binding Candidates}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Код" Binding="{Binding CandidateNumber}" Width="80"/>
                        <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="200"/>
                        <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                        <DataGridTextColumn Header="Паспорт" Binding="{Binding Passport}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <!-- Индикатор загрузки -->
        <Border Grid.Row="1" 
                Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,10"/>
                <TextBlock Text="Загрузка данных..." Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>