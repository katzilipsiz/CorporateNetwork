<Window x:Class="CorporateNetworkWPF.Dialogs.DepartmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:CorporationNetworkWPF.Models"
        Title="Добавить отдел" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Главный отдел (код):" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" Text="{Binding Department.MainDepartment, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Text="Название отдела:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" Text="{Binding Department.DepartmentName, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" Text="Описание:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="5" Text="{Binding Department.Description, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,0,0,20"
                 Height="60"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="5,0,0,0"
                    IsDefault="True" Click="OkButton_Click"/>
            <Button Content="Отмена" Width="80" Margin="5,0,0,0"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>